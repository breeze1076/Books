@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Identity
@model Tuple<Author, IEnumerable<Book>>

@{
    ViewData["Title"] = "Add Book";
}

<div class="p-3">
    <h4>Author</h4>
    <div>@Html.DisplayFor(model => model.Item1.Name)</div>
    <hr />
    <div>
        <h4>Add Book</h4>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddBook">
                    <div class="form-group">
                        @Html.DropDownList("BookId", new SelectList(Model.Item2, "Id", "Name"),
                            new { Style = "width: 500px;" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    </div>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Item1.Id">Back to Author</a>
    </div>
</div>